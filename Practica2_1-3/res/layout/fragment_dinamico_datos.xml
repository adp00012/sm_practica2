<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
<LinearLayout
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dirip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="20dp"
        android:typeface="serif"
        android:textSize="14sp"
        android:textStyle="bold|italic|"
        android:layout_gravity="center"
        android:text="Introduce tus datos de acceso:" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textStyle="italic"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:text=" · Nombre de usuario: " />
    
    <EditText
        android:id="@+id/editUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"/>
    
    <TextView
        android:id="@+id/texView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:typeface="sans"
        android:textStyle="italic"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:text=" · Contraseña: " />
    
    <EditText
        android:id="@+id/editPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:inputType="textPassword" />
    
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:typeface="sans"
        android:textStyle="italic"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:text=" · Dirección de Red: "/>
    
    <EditText
        android:id="@+id/editRed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />
    
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:typeface="sans"
        android:textStyle="italic"
        android:layout_gravity="left"
        android:layout_marginLeft="25dp"
        android:text=" · Puerto: " />
    
    <EditText
        android:id="@+id/editPuerto"
        android:numeric="integer"
  		android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp" />
    
     <Button
        android:id="@+id/button$fragment_dinamico_datos$ActivityPasoParametros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:text="Inicio de Sesión"/>
     
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Error de Conexion"
         android:layout_gravity="center_horizontal"
         android:id="@+id/txt_estadioConexion"/>

</LinearLayout>

</ScrollView>
